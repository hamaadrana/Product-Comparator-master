<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
    crossorigin="anonymous">
  <title>Product Scraper</title>
</head>

<body>
  <div class="container py-4">
    <h1 class="text-center">Price Comparator</h1>
    <div class="row">
      <div class="col-md-6 offset-md-3 text-center">
        <form class="form-inline justify-content-center" action="/" method="POST">
          <div class="form-group mb-2">
            <input type="text" class="form-control" name="search" placeholder="Iphone6, watch, laptop">
          </div>
          <button type="submit" class="btn btn-primary ml-2 mb-2">Go!</button>
        </form>
      </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6 mt-4">
<%  ebayData.sort(function(a,b) {return (a.price > b.price) ? 1 : ((b.price > a.price) ? -1 : 0);} ); %>
<% var x = 0; %>
            <% ebayData.forEach(data => { %>
			<% if(x != 6) { %>
              <ul class="list-unstyled">
                <li class="media">
                  <a href="<%= data.url %>" target="_blank">
                    <img class="mr-3" src="<%= data.photo_url %>" alt="<%= data.name %>" style="width: 200px; height:200px">
                  </a>
                  <div class="media-body">
                    <h5 class="mt-0">
                      <%= data.name %>
                    </h5>
                    <h3>
                      <%= data.price %>
                    </h3>
                    <p>
                      <%= data.target_site %>
					<% x = x +1; %>

                    </p>
                  </div>
                </li>
              </ul>
			  <%} %>
              <%})%>
          </div>
      <div class="col-md-6 mt-4">
	  <%  neweggData.sort(function(a,b) {return (a.price > b.price) ? 1 : ((b.price > a.price) ? -1 : 0);} ); %>
      <% var x = 0; %>
        <% neweggData.forEach(data => { %>
			<% if(x != 6) { %>

          <ul class="list-unstyled">
            <li class="media">
              <a href="<%= data.url %>" target="_blank">
                <img class="mr-3" src="<%= data.photo_url %>" alt="<%= data.name %>" style="width: 200px; height:200px">
              </a>
              <div class="media-body">
                <h5 class="mt-0">
                  <%= data.name %>
                </h5>
                <h3>
                  <%= data.price %>
                </h3>
                <p>
                  <%= data.target_site %>
				  		<% x = x +1; %>

                </p>
              </div>
            </li>
          </ul>
		    <%} %>
          <%})%>
      </div>
    </div>
  </div>
</body>

</html>